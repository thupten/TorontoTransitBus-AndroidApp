<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true" >

    <TableLayout
        android:id="@+id/table_route_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" >

        <TableRow android:layout_marginTop="10sp" >

            <TextView
                android:id="@+id/labelRoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_routes"
                android:textSize="30sp" />
        </TableRow>

        <TableRow>

            <Spinner
                android:id="@+id/spinnerDirections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/choose_direction"
                android:spinnerMode="dialog"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>

        <TableRow android:layout_marginTop="10sp" >

            <Spinner
                android:id="@+id/spinnerStops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/choose_stop" />
        </TableRow>

        <TableRow >

            <Button android:id="@+id/btnSubmit"
                android:text="Go"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="30sp"
                />
        </TableRow>
        <TableRow android:layout_marginTop="20sp" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:text="@string/next3buses"
                android:textSize="30sp" />
        </TableRow>

        <TableRow android:layout_marginTop="10sp" >

            <TextView
                android:id="@+id/next_bus_desc_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next3buses"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/next_bus_time_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next3buses"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>

        <TableRow android:layout_marginTop="10sp" >

            <TextView
                android:id="@+id/next_bus_desc_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next3buses"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/next_bus_time_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next3buses"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>

        <TableRow android:layout_marginTop="10sp" >

            <TextView
                android:id="@+id/next_bus_desc_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next3buses"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/next_bus_time_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next3buses"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>
    </TableLayout>

</ScrollView>